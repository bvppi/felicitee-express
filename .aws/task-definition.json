{
  "containerDefinitions": [
    {
      "name": "atlantis",
      "image": "<IMAGE1_NAME>",
      "cpu": $api_container_cpu,
      "memoryReservation": $api_container_mem_reservation,
      "portMappings": [
        {
          "containerPort": 4141,
          "hostPort": 4141,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "entryPoint": [],
      "command": [],
      "environment": [
        {
          "name": "ATLANTIS_PORT",
          "value": "4141"
        }
      ],
      "mountPoints": [],
      "volumesFrom": [],
      "secrets": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "PORT",
          "value": "3001"
        },
        {
          "name": "SMTP_HOST",
          "valueFrom": "$ssm_prefix/SMTP_HOST"
        },
        {
          "name": "SMTP_PORT",
          "valueFrom": "$ssm_prefix/SMTP_PORT"
        },
        {
          "name": "SMTP_USER",
          "valueFrom": "$ssm_prefix/SMTP_USER"
        },
        {
          "name": "SMTP_PASS",
          "valueFrom": "$ssm_prefix/SMTP_PASS"
        },
        {
          "name": "CONTACT_EMAIL_TO",
          "valueFrom": "$ssm_prefix/CONTACT_EMAIL_TO"
        },
        {
          "name": "CONTACT_EMAIL_FROM",
          "valueFrom": "$ssm_prefix/CONTACT_EMAIL_FROM"
        },
        {
          "name": "GOOGLE_FORM_WEBAPP_URL",
          "valueFrom": "$ssm_prefix/GOOGLE_FORM_WEBAPP_URL"
        }
      ],
      "privileged": false,
      "readonlyRootFilesystem": false,
      "extraHosts": [],
      "ulimits": [
        {
          "name": "nofile",
          "softLimit": 65536,
          "hardLimit": 65536
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/atlantis-$ssm_prefix",
          "awslogs-create-group": "true",
          "awslogs-region": "ap-southeast-1",
          "awslogs-stream-prefix": "atlantis"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:4141/status || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      },
      "systemControls": []
    }
  ],
  "family": "felicitee-express-$build_environment",
  "networkMode": "awsvpc",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::$account_id:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::$account_id:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "felicitee-express",
      "image": "$account_id.dkr.ecr.$aws_region.amazonaws.com/$image_repo_name:$commit",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3001,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "PORT",
          "value": "3001"
        }
      ],
      "secrets": [
        {
          "name": "SMTP_HOST",
          "valueFrom": "$ssm_prefix/SMTP_HOST"
        },
        {
          "name": "SMTP_PORT",
          "valueFrom": "$ssm_prefix/SMTP_PORT"
        },
        {
          "name": "SMTP_USER",
          "valueFrom": "$ssm_prefix/SMTP_USER"
        },
        {
          "name": "SMTP_PASS",
          "valueFrom": "$ssm_prefix/SMTP_PASS"
        },
        {
          "name": "CONTACT_EMAIL_TO",
          "valueFrom": "$ssm_prefix/CONTACT_EMAIL_TO"
        },
        {
          "name": "CONTACT_EMAIL_FROM",
          "valueFrom": "$ssm_prefix/CONTACT_EMAIL_FROM"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/felicitee-express-$build_environment",
          "awslogs-region": "$aws_region",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "wget --no-verbose --tries=1 --spider http://localhost:3001/api/health_check || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}
