{
  "containerDefinitions": [
    {
      "name": "felicitee-express",
      "image": "<IMAGE1_NAME>",
      "cpu": 256,
      "memoryReservation": 512,
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "mountPoints": [],
      "volumesFrom": [],
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "PORT",
          "value": "3000"
        }
      ],
      "secrets": [
        {
          "name": "SMTP_HOST",
          "valueFrom": "/$ssm_prefix/smtp-host"
        },
        {
          "name": "SMTP_PORT",
          "valueFrom": "/$ssm_prefix/smtp-port"
        },
        {
          "name": "SMTP_USER",
          "valueFrom": "/$ssm_prefix/smtp-user"
        },
        {
          "name": "SMTP_PASS",
          "valueFrom": "/$ssm_prefix/smtp-pass"
        },
        {
          "name": "CONTACT_EMAIL_TO",
          "valueFrom": "/$ssm_prefix/contact-email-to"
        },
        {
          "name": "CONTACT_EMAIL_FROM",
          "valueFrom": "/$ssm_prefix/contact-email-from"
        },
        {
          "name": "GOOGLE_FORM_WEBAPP_URL",
          "valueFrom": "/$ssm_prefix/google-form-webapp-url"
        }
      ],
      "privileged": false,
      "readonlyRootFilesystem": false,
      "extraHosts": [],
      "ulimits": [
        {
          "name": "nofile",
          "softLimit": 65536,
          "hardLimit": 65536
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/felicitee-api/prd",
          "awslogs-create-group": "true",
          "awslogs-region": "ap-southeast-1",
          "awslogs-stream-prefix": "felicitee-api"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:3001/api/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      },
      "systemControls": []
    }
  ],
  "family": "felicitee-express-$build_environment",
  "networkMode": "awsvpc",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::$account_id:role/FeliciteeApiEcsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::$account_id:role/FeliciteeApiEcsTaskRole",
  "runtimePlatform": {
    "cpuArchitecture": "ARM64",
    "operatingSystemFamily": "LINUX"
  }
}
